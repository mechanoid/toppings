{
  // whether to use sass original style or scss syntax
  "sass": {
    "dialect": "sass",
    // should not be changed
    "template_dialect": "sass",

    "framework": {
      "core": "compass",
      "reset": "normalize",
      "css3": "compass/css3"
    }
  },

  // the name of the given root file where base files will be appended
  "stylesheets": {
    "root_folder": "sass",
    "compile_target": "stylesheets",
    "root_file": "toppings",
    "relative_index_file": "index"
  }
}