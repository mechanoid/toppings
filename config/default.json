{
  // whether to use sass original style or scss syntax
  "sass": {
    "dialect": "scss",

    "framework": {
      "core": "compass",
      "reset": "compass/reset",
      "css3": "compass/css3"
    }
  },

  // the name of the given root file where base files will be appended
  "stylesheets": {
    "root_folder": "stylesheets",
    "root_file": "toppings"
  }
}